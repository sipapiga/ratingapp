<%- include("../partials/head.ejs") %>

<body>
    <div class="container pt-4">
        <%- include ('../partials/nav') %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td><strong>Restaurant name</strong></td>
                    <td><strong>Restaurant rating</strong></td>
                    <td><strong>Actions</strong></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% for(data of datas) { %>
                    <td><%= data.name %></td>
                    <td><%= data.rating %> </td>
                    <td>
                        <button type="button" class="btn btn-info btn-sm mr-3 editBtn" id=<%= data.id %>>
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-sm deleteBtn" id=<%= data.id %>> <i
                                class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Restaurant</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form method="POST" action="" id="editForm">
                        <div class="form-group">
                            <label>Restaurant Name</label>
                            <input name="name" id="name" type="text" placeholder="Espresso House" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Location</label>
                            <input name="location" id="location" type="text" placeholder="SveavÃ¤gen 90"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input name="price" id="price" type="text" placeholder="$$$" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input name="phonenumber" id="phonenumber" type="text" placeholder="+46 8 662 30 60"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <input name="category" id="category" type="text" placeholder="Enter one category"
                                class="form-control">
                            <small class="form-text text-muted">
                                t.ex Scandinavian, Swedish, Korean, Thai, Modern European ...
                            </small>
                        </div>
                        <div class="text-right pb-4">
                            <input type="submit" value="Edit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End Edit Modal -->
    <%- include("../partials/end.ejs") %>
    <script src="../js/main.js"></script>
</body>

</html>